{{foreach(options.accounts)}}
<div>
{{if (@this.status === 'closed')}}
    <div>
    Your account has been closed!
    </div>
{{#else}}
    {{if (@this.status === 'suspended')}}
    <div>
    Your account has been temporarily suspended
    </div>
    {{#else}}
    <div>
        Bank balance:
        <span class={{if(@this.balance < 0)}}'negative'{{#else}}'positive'{{/if}}>{{@this.balanceFormatted}}</span>
    </div>
    {{/if}}
{{/if}}
</div>
{{/foreach}}